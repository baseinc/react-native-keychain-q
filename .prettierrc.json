{
  "proseWrap": "never",
  "singleQuote": true,
  "trailingComma": "es5",
  "overrides": [
    {
      "files": [
        "*.js",
        "*.json"
      ],
      "options": {
        "tabWidth": 2
      }
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
