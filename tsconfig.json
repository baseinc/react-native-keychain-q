{
  "include": [
    "src/**/*.ts",
    "example/**/*.ts",
    "example/**/*.tsx"
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": [
      "es2015",
      "es2016",
      "esnext"
    ],
    "jsx": "react-native"
  },
  "exclude": [
    "node_modules"
  ]
}
